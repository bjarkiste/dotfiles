# Functions
add_sudo ()
{
	prefix="sudo"
	BUFFER="$prefix $BUFFER"
	CURSOR=$(($CURSOR + $#prefix + 1))
}
zle -N add_sudo
bindkey "^f" add_sudo

docker()
{
    if [[ "$1" = "c" ]]; then
        DOCKERPS=$(/usr/bin/docker ps -aq)

        if [ -z "$DOCKERPS" ]; then
            echo "No containers to remove :^)"
        else
            /usr/bin/docker rm -f $DOCKERPS
        fi
    else
        /usr/bin/docker $@ | cut -c-$(tput cols)
    fi
}
zle -N docker
